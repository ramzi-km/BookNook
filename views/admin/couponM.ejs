        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h3 class="page-title">Coupon management</h3>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Sales Cards  -->
                <!-- ============================================================== -->

                <!-- Column -->

                <!-- ============================================================== -->
                <!-- Sales chart -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="p-3 mb-3 d-flex justify-content-end">
                                    <a href="/admin/couponM/addCoupon"><button class="btn btn-outline-success"><i
                                                class="fa fa-plus-square fs-5"></i> Add coupon</button></a>
                                </div>

                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered">
                                        <thead class="table-dark">
                                            <tr>
                                                <th class="text-white">N.O</th>
                                                <th class="text-white">Name</th>
                                                <th class="text-white">Coupon code</th>
                                                <th class="text-white">Discount(%)</th>
                                                <th class="text-white">Expiry</th>
                                                <th class="text-white">Min purchase amount</th>
                                                <th class="text-white">Max discount amount</th>
                                                <th class="text-white">Options</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% coupons.forEach((coupon,index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index+1 %>
                                                    </td>
                                                    <td>
                                                        <%= coupon.name %>
                                                    </td>
                                                    <td>
                                                        <%= coupon.code %>
                                                    </td>
                                                    <td>
                                                        <%= coupon.discountPercentage %>
                                                    </td>
                                                    <td>
                                                        <%= coupon.expiryDate.toLocaleString("en-GB") %>
                                                    </td>
                                                    <td>
                                                        <%= coupon.minPurchaseAmount %>
                                                    </td>
                                                    <td>
                                                        <%= coupon.maxDiscountAmount %>
                                                    </td>

                                                    <td>
                                                        <div class="d-flex justify-content-center align-items-center">
                                                            <a
                                                                href="/admin/couponM/editCoupon/<%= coupon._id %> " class="me-3 btn btn-dark"><i
                                                                    class="mdi mdi-pencil "></i></a>

                                                            <% if (coupon.unList) { %>
                                                                <a href="/admin/couponM/list/<%= coupon._id %> "
                                                                    class="btn btn-light btn-outline-success"
                                                                    onclick="return confirm('Do you want to List <%= coupon.name %> ?')">
                                                                    List</a>
                                                                <% } else { %>
                                                                    <a href="/admin/couponM/unList/<%= coupon._id %> "
                                                                        class="btn btn-light btn-outline-danger"
                                                                        onclick="return confirm('Do you really want to Unlist <%= coupon.name %> ?')">
                                                                        Unlist</a>
                                                                    <% } %>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- Sales chart -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Recent comment and chats -->
