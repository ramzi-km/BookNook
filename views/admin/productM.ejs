        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Product management</h4>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Sales Cards  -->
                <!-- ============================================================== -->

                <!-- Column -->

                <!-- ============================================================== -->
                <!-- Sales chart -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="p-3 mb-3 d-flex justify-content-end">
                                    <a href="/admin/productM/addProduct"><button class="btn btn-outline-success"><i
                                                class="fa fa-plus-square fs-5"></i> Add product</button></a>
                                </div>

                                <% if (message) { %>
                                    <div class="alert alert-dismissable fade show alert-success d-flex justify-content-between" role="alert">
                                        <strong>
                                            <%= message %>
                                        </strong>
                                        <button class="btn-close" type="button" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                    </div>
                                    <% }else if(editMessage){ %>
                                        <div class="alert alert-dismissable d-flex justify-content-between fade show alert-success" role="alert">
                                            <strong>
                                                <%= editMessage %>
                                            </strong>
                                            <button class="btn-close" type="button" data-bs-dismiss="alert"
                                                aria-label="Close"></button>
                                        </div>
                                        <% }else if(failMessage){ %>
                                            <div class="alert alert-dismissable fade show alert-danger d-flex justify-content-between" role="alert">
                                                <strong>
                                                    <%= failMessage %>
                                                </strong>
                                                <button class="btn-close" type="button" data-bs-dismiss="alert"
                                                    aria-label="Close"></button>
                                            </div>
                                            <% }else if(editFailMessage){ %>
                                                <div class="alert alert-dismissable fade show alert-danger d-flex justify-content-between"
                                                    role="alert">

                                                    <strong>
                                                        <%= editFailMessage %>
                                                    </strong>
                                                    <button class="btn-close" type="button" data-bs-dismiss="alert"
                                                        aria-label="Close"></button>
                                                </div>
                                                <% } %>
                                                    <div class="table-responsive">
                                                        <table id="zero_config"
                                                            class="table table-striped table-bordered">
                                                            <thead class="table-dark">
                                                                <tr>
                                                                    <th class="text-white">N.O</th>
                                                                    <th class="text-white">Image</th>
                                                                    <th class="text-white">Name</th>
                                                                    <th class="text-white">Author</th>
                                                                    <th class="text-white">Category</th>
                                                                    <th class="text-white">Price</th>
                                                                    <th class="text-white">Stock</th>
                                                                    <th class="text-white">Options</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% products.forEach((product,index)=> { %>
                                                                    <tr class="align-middle">
                                                                        <td>
                                                                            <%= index+1 %>
                                                                        </td>
                                                                        <td>
                                                                            <img src="/images/productImages/<%= product.mainImage[0].filename %>"
                                                                                width="70" class="img-thumbnail">
                                                                        </td>
                                                                        <td>
                                                                            <%= product.name %>
                                                                        </td>
                                                                        <td>
                                                                            <%= product.author %>
                                                                        </td>
                                                                        <td>
                                                                            <%= product.category %>
                                                                        </td>
                                                                        <td>
                                                                            <%= product.price %>
                                                                        </td>
                                                                        <td>
                                                                            <%= product.inStock %>
                                                                        </td>
                                                                        <td>
                                                                            <div class="d-flex flex-column align-items-center"
                                                                                style="height: 50px;">
                                                                                <a href="/admin/productM/editProduct/<%= product._id %> "
                                                                                    class="btn btn-dark mb-2"><i
                                                                                        class="mdi mdi-pencil "></i>
                                                                                </a>
                                                                                <% if (product.unList) { %>
                                                                                    <a href="/admin/productM/list/<%= product._id %> "
                                                                                        class="btn btn-light btn-outline-success"
                                                                                        onclick="return confirm('Do you want to List <%= product.name %> ?')">
                                                                                        List</a>
                                                                                    <% } else { %>
                                                                                        <a href="/admin/productM/unList/<%= product._id %> "
                                                                                            class="btn btn-light btn-outline-danger"
                                                                                            onclick="return confirm('Do you really want to Unlist <%= product.name %> ?')">
                                                                                            Unlist</a>
                                                                                        <% } %>
                                                                            </div>

                                                                        </td>
                                                                    </tr>
                                                                    <% }) %>

                                                            </tbody>

                                                        </table>
                                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- Sales chart -->
            <!-- ============================================================== -->
