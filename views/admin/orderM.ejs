        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h3 class="page-title">Order management</h3>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Sales Cards  -->
                <!-- ============================================================== -->

                <!-- Column -->

                <!-- ============================================================== -->
                <!-- Sales chart -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">



                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered">
                                        <thead class="table-dark">
                                            <tr>
                                                <th class="text-white">Order Id</th>
                                                <th class="text-white">Product name</th>
                                                <th class="text-white">Ordered by</th>
                                                <th class="text-white">Quantity</th>
                                                <th class="text-white">Total</th>
                                                <th class="text-white">Payment</th>
                                                <th class="text-white">Status</th>
                                                <th class="text-white">Options</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% orders.forEach((order,index)=> { %>
                                                <tr class="align-middle">
                                                    <td>
                                                        <%= order.orderId %>
                                                    </td>
                                                    <td>
                                                        <%= order.product.name %>
                                                    </td>
                                                    <td>
                                                        <%= order.address.name %>
                                                    </td>
                                                    <td>
                                                        <%= order.quantity %>
                                                    </td>
                                                    <td>
                                                        â‚¹<%= order.total %>
                                                    </td>
                                                    <td>
                                                        <%= order.paymentType %>
                                                    </td>
                                                    <td>
                                                        <% if (order.status=="pending" ) { %>
                                                            <form action="/admin/orderM/<%= order._id %>" method="post">
                                                                <select name="status"
                                                                    class="btn btn-rounded btn-warning"
                                                                    onchange="this.form.submit()">
                                                                    <option selected value="pending"
                                                                        class="btn btn-dark">
                                                                        <%= order.status %>
                                                                    </option>
                                                                    <option value="shipped" class="btn btn-dark">shipped
                                                                    </option>
                                                                    <option value="delivered" class="btn btn-dark">
                                                                        delivered</option>
                                                                </select>
                                                            </form>
                                                            <% } else if (order.status=="shipped" ) { %>
                                                                <form action="/admin/orderM/<%= order._id %>"
                                                                    method="post">
                                                                    <select name="status"
                                                                        class="btn btn-rounded btn-info"
                                                                        onchange="this.form.submit()">
                                                                        <option selected value="shipped"
                                                                            class="btn btn-dark">
                                                                            <%= order.status %>
                                                                        </option>
                                                                        <option value="pending" class="btn btn-dark">
                                                                            pending</option>
                                                                        <option value="delivered" class="btn btn-dark">
                                                                            delivered</option>
                                                                    </select>
                                                                </form>
                                                                <% } else if (order.status=="delivered" ) { %>
                                                                    <form action="/admin/orderM/<%= order._id %>"
                                                                        method="post">
                                                                        <select name="status"
                                                                            class="btn btn-rounded btn-success"
                                                                            onchange="this.form.submit()">
                                                                            <option selected value="delivered"
                                                                                class="btn btn-dark">
                                                                                <%= order.status %>
                                                                            </option>
                                                                            <option value="pending"
                                                                                class="btn btn-dark">
                                                                                pending</option>
                                                                            <option value="shipped"
                                                                                class="btn btn-dark">
                                                                                shipped</option>
                                                                        </select>
                                                                    </form>
                                                                    <% } else if (order.status=="return processing" ){ %>
                                                                        <form action="/admin/orderM/<%= order._id %>"
                                                                            method="post">
                                                                            <select name="status"
                                                                                class="btn btn-rounded btn-primary"
                                                                                onchange="this.form.submit()">
                                                                                <option selected value="return processing"
                                                                                    class="btn btn-dark">
                                                                                    <%= order.status %>
                                                                                </option>
                                                                                <option value="returned"
                                                                                    class="btn btn-dark">
                                                                                    returned</option>
                                                                            </select>
                                                                        </form>

                                                                        <% } else {%>
                                                                        <button class="btn btn-rounded btn-danger"><%= order.status %></button>
                                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex flex-column align-items-center"
                                                            style="height: 50px;">
                                                            <a href="/admin/orderM/viewOrder/<%= order._id %> "
                                                                class="btn btn-dark mb-2"><i class="fa fa-eye"> View</i>
                                                            </a>
                                                        </div>

                                                    </td>
                                                </tr>
                                                <% }) %>

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
