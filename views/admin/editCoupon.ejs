                <!-- Column -->

                <!-- ============================================================== -->
                <!-- Sales chart -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body" style="background-color: #061c31;">
                                <h4 class="card-title text-success">Edit <span class="text-muted">
                                        <%= coupon.name %>
                                    </span></h4>
                                <form class="form-horizontal mt-4" action="/admin/couponM/editCoupon/<%= coupon._id %>" method="post">
                                    <div class="row">
                                        <div class="form-group col-md-4">
                                            <label class="text-white">Name</label>
                                            <input type="text" class="form-control" name="name" value="<%=coupon.name %>"
                                                required>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label class="text-white" for="Code">Code</label>
                                            <input type="text" id="Code" name="code" class="form-control"
                                                value="<%=coupon.code  %>" required>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label class="text-white">Discount</label>
                                            <input type="number" class="form-control" name="discountPercentage"
                                                value="<%= coupon.discountPercentage %>" required>
                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="form-group col-md-4">
                                            <label class="text-white">Min purchase amount</label>
                                            <input type="text" class="form-control" name="minPurchaseAmount"
                                                value="<%= coupon.minPurchaseAmount %>" required>
                                        </div>

                                        <div class="form-group col-md-4">
                                            <label class="text-white">Max discount amount</label>
                                            <input type="text" class="form-control" name="maxDiscountAmount"
                                                value="<%=coupon.maxDiscountAmount %>" required>
                                        </div>

                                        <div class="form-group col-md-4">
                                            <label class="text-white">Expiry</label>
                                            <input type="date" class="form-control" name="expiryDate" value="<%= expiryDate %>"
                                                required>
                                        </div>

                                    </div>

                                    <div class="d-flex justify-content-center mt-4">
                                        <button id="submit" class="btn btn-success" type="submit"><span
                                                class="text-white"> Save</span></button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
