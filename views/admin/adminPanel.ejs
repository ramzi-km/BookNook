    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
      var monthlyData ='<%= JSON.stringify(monthlyData)%>'
      var options = {
        series: [
          {
            name: 'revenue',
            data: JSON.parse(monthlyData),
          },
        ],
        chart: {
          height: 350,
          type: "bar",
        },
        plotOptions: {
          bar: {
            columnWidth: "45%",
            distributed: true,
          },
        },
        dataLabels: {
          enabled: false,
        },
        legend: {
          show: false,
        },
        theme: {
          palette: 'palette2'
        },
        xaxis: {
          categories: [
            "Jan",
            "Feb",
            "Mar",
            "Apr",
            "May",
            "Jun",
            "Jul",
            "Aug",
            "Sep",
            "Oct",
            "Nov",
            "Dec",
          ],
          labels: {
            style: {
              fontSize: "14px",
            },
          },
        },
      };

      var chart = new ApexCharts(document.querySelector("#chart"), options);
      chart.render();
    </script>

