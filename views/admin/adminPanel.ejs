  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
  <script>
    var paymentData = '';
    var monthlyData = '';
    var categoryData = '';
    var categoryName = ``.split(",")

     //--------------- chart 1 ------------//
    
    var options = {
      series: [
        {
          name: 'revenue',
          data: JSON.parse(monthlyData),
        },
      ],
      chart: {
        height: 350,
        type: 'bar',
      },
      plotOptions: {
        bar: {
          columnWidth: '45%',
          distributed: true,
        },
      },
      dataLabels: {
        enabled: false,
      },
      legend: {
        show: false,
      },
      theme: {
        palette: 'palette2',
      },
      xaxis: {
        categories: [
          'Jan',
          'Feb',
          'Mar',
          'Apr',
          'May',
          'Jun',
          'Jul',
          'Aug',
          'Sep',
          'Oct',
          'Nov',
          'Dec',
        ],
        labels: {
          style: {
            fontSize: '14px',
          },
        },
      },
    };

    var chart1 = new ApexCharts(document.querySelector('#chart'), options);
    chart1.render();

     //--------------- chart 2 ------------//

    var options2 = {
      chart: {
        type: 'donut',
      },
      series: JSON.parse(categoryData),
      labels:  categoryName,
      plotOptions: {
        pie: {
          customScale: 0.8,
        },
      },

     
    };

    var chart2 = new ApexCharts(document.querySelector('#chart2'), options2);
    chart2.render();

     //--------------- chart 3 ------------//

     var options3 = {
      chart: {
        type: 'pie',
      },
      series: JSON.parse(paymentData),
      labels:  ['Online payment','Cash on delivery'],
      plotOptions: {
        pie: {
          customScale: 0.7,
        },
      },

   
      theme: {
        palette: 'palette3',
      },
    };

    var chart3 = new ApexCharts(document.querySelector('#chart3'), options3);
    chart3.render();

  </script>

