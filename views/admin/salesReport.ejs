<%- include('./partials/adminHeader.ejs') %>

<style>
  .tablesHeader h3 {
    font-size: 0.9rem !important;
  }

  .tablesHeader a button {
    font-size: 0.7rem !important;
    height: 30px !important;
    border-radius: 5px;
  }

  .filter-head {
    display: flex;
    align-items: center;
  }

  .filter-head input {
    border: none;
    outline: none;
    background-color: #fff;
    height: 40px;
    padding: 10px;
    border: 1px solid rgb(222, 222, 222);
    margin: 5px;
    margin-top: -10px;
  }

  .thead {
    padding: 20px;
  }

  .report-btns {
    display: flex;
    justify-content: flex-end;
    margin-top: 20px;
  }

  .order-table th,
  .order-table td {
    padding: 5px;
    text-align: left;
    padding-left: 20px;
  }

  table input {
    outline: none;
    background: none !important;
    padding: 5px;
    border: none;
  }

  .del-status {
    border-radius: 5px;
    font-weight: 500;
    color: rgb(0, 0, 207);
    background-color: rgba(0, 0, 255, 0.181);
  }

  .del-status.pending,
  .del-status.returnProcessing {
    background-color: #ff99002f;
    color: #ff9900;
  }

  .del-status.returned,
  .del-status.cancelled {
    background-color: #ca01012d;
    color: #ca0101;
  }

  .del-status.delivered {
    background-color: #0090292b;
    color: #009028;
  }

  @media (max-width: 1200px) {
    .orders-table th,
    .orders-table td {
      font-size: 0.7rem;
    }

    .orders-table img {
      max-height: 20px;
    }

    .order-container {
      width: 100%;
      flex: 100%;
      overflow: hidden;
      padding-right: 5px;
      padding-left: 5px;
    }

    .orders-table {
      width: 100%;
      overflow-x: scroll;
    }

    .tablesHeader h3 {
      font-size: 0.9rem !important;
    }

    .tablesHeader a button {
      font-size: 0.7rem !important;
      height: 30px !important;
      border-radius: 5px;
    }
  }

  @media (max-width: 991px) {
    .orders-table th,
    .orders-table td {
      font-size: 0.7rem;
    }

    .orders-table img {
      max-height: 20px;
    }

    .order-container {
      width: 100vw;
      flex: 100%;
      overflow: hidden;
    }

    .orders-table {
      width: 100vw;
      overflow-x: scroll;
    }

    .tablesHeader h3 {
      font-size: 0.9rem !important;
    }

    .tablesHeader a button,
    .tablesHeader button,
    .tablesHeader a {
      font-size: 0.7rem !important;
      height: 30px !important;
      border-radius: 5px;
    }

    .tablesHeader a {
      height: 50px !important;
    }

    .tablesHeader form input {
      font-size: 0.7rem;
      min-width: 100px !important;
      max-width: 100px !important;
    }

    .tablesHeader form,
    .tablesHeader form select {
      width: 180px;
      height: 40px;
    }

    .tablesHeader h3 {
      font-size: 1.2rem !important;
    }

    .head3 {
      font-size: 1.2rem !important;
    }

    .tablesHeader form select {
      width: 100px;
      height: 40px !important;
      font-size: 0.7rem;
    }
  }
</style>
