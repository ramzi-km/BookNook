  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Sales Cards  -->
    <!-- ============================================================== -->

    <!-- Column -->

    <!-- ============================================================== -->
    <!-- Sales chart -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body" style="background-color: #061c31">
            <h4 class="card-title text-success">Add a new Coupon</h4>
            <form
              class="form-horizontal mt-4"
              action="/admin/couponM/addCoupon"
              method="post"
              id="couponForm"
            >
              <div class="row">
                <div class="form-group col-md-4">
                  <label class="text-white">Name</label>
                  <input
                    type="text"
                    class="form-control"
                    name="name"
                    placeholder="coupon name"
                    required
                    id="couponName"
                  />
                  <label id="nameError" class="text-danger"></label>
                </div>
                <div class="form-group col-md-4">
                  <label class="text-white" for="couponCode"
                    >Code</label
                  >
                  <input
                    type="text"
                    id="couponCode"
                    name="code"
                    class="form-control"
                    placeholder="coupon code"
                    required
                  />
                  <label id="codeError" class="text-danger"></label>
                </div>
                <div class="form-group col-md-4">
                  <label class="text-white">Discount</label>
                  <input
                    type="number"
                    id="discount"
                    class="form-control"
                    name="discountPercentage"
                    placeholder="discount percentage"
                    min="1"
                    max="70"
                    required
                  />
                </div>
              </div>
              <div class="row mb-3">
                <label for="" class="text-danger">
                    <%= error %>
                </label>
            </div>

              <div class="row">
                <div class="form-group col-md-4">
                  <label class="text-white"
                    >Min purchase amount</label
                  >
                  <input
                    type="number"
                    min="20"
                    class="form-control"
                    name="minPurchaseAmount"
                    placeholder="minimum purchase amount of the coupon"
                    required
                  />
                </div>

                <div class="form-group col-md-4">
                  <label class="text-white"
                    >Max discount amount</label
                  >
                  <input
                    type="number"
                    min="10"
                    class="form-control"
                    name="maxDiscountAmount"
                    placeholder="maximum amount that can be given as a discount "
                    required
                  />
                </div>

                <div class="form-group col-md-4">
                  <label class="text-white">Expiry</label>
                  <input
                    type="date"
                    id="expiryDate"
                    min="<%= todaysDate %>"
                    class="form-control expiryDate1"
                    name="expiryDate"
                    placeholder="expiry date of the coupon"
                    required
                  />
                </div>
              </div>

              <div class="d-flex justify-content-center mt-4">
                <button class="btn btn-success" type="submit">
                  <span class="text-white"> Add Coupon</span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
