<body style="background-color: #f1f1f1">
    <!-- Start Header Area -->
    <header class="header_area sticky-header">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light main_box">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand logo_h" href="/"><img src="/images/logo.png" width="30%" alt="" /><span
                            class="ml-3">Book<span class="text-danger">Nook</span></span></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav ml-auto">
                            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                            <li class="nav-item">
                                <a class="nav-link" href="/shop">Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/cart"><span style="font-size: large"><i
                                            class="fa-solid fa-cart-shopping"></i></span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/wishlist"><span style="font-size: large"><i
                                            class="fa-regular fa-heart"></i></span></a>
                            </li>
                            <% if (user) { %>
                                <li class="nav-item submenu dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button"
                                        aria-haspopup="true" aria-expanded="false"><span style="font-size: large"><i
                                                class="fa-solid fa-circle-user"></i>
                                        </span>
                                        <%= user.name %>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a class="nav-link" href="#"><i class="fa-solid fa-address-card"></i>
                                                Profile</a>
                                        </li>
                                        <li class="nav-item">
                                            <form action="/logout" method="post">
                                                <button class="nav-link" type="submit" style="width: 100%">
                                                    <i class="fa-solid fa-right-from-bracket"></i> Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                                <% } else { %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/login"><span style="font-size: large"><i
                                                    class="fa-solid fa-circle-user"></i></span>
                                            LogIn <i class="fa-solid fa-right-to-bracket"></i></a>
                                    </li>
                                    <% } %>
                        </ul>
                        <!-- <ul class="nav navbar-nav navbar-right">
						</ul> -->
                    </div>
                </div>
            </nav>
        </div>

    </header>
    <!-- End Header Area -->
    <section>
        <div class="container-fluid" style="height: 130px"></div>
    </section>
    <!-- start banner Area -->
    <!-- End banner Area -->

    <!-- Checkout Section Begin -->
    <section class="checkout spad mt-3">
        <div class="container">
            <div class="d-flex justify-content-center mb-5">
                <h2>Checkout</h2>
            </div>

            <div class="checkout__form">


                <div class="row">

                    <div class="col-lg-8 col-md-6">

                        <h6 class="checkout__title">Billing Details</h6>
                        <div id="accordion">
                            <div class="card">
                                <div class="card-header" id="headingTwo">
                                    <h5 class="mb-0">
                                        <button class="btn collapsed" data-toggle="collapse" data-target="#collapseTwo"
                                            aria-expanded="false" aria-controls="collapseTwo">
                                            Add Address <i class="fa-regular fa-plus"></i>
                                        </button>
                                    </h5>
                                </div>
                                <div id="collapseTwo" class="collapse" data-parent="#accordion">
                                    <div class="card-body">
                                        <form action="">
                                            <div class="row">

                                                <div class="col-lg-6">
                                                    <div class="checkout__input">
                                                        <p>Name<span>*</span></p>
                                                        <input type="text" name="name" required />
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="checkout__input">
                                                        <p>Mobile<span>*</span></p>
                                                        <input type="text" name="mobile" pattern="[0-9]*" maxlength="10"
                                                            required />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="checkout__input">
                                                <p>Address<span>*</span></p>
                                                <textarea name="address" rows="3" form="addAddressForm"
                                                    required></textarea>
                                            </div>
                                            <div class="checkout__input">
                                                <p>Town/City<span>*</span></p>
                                                <input type="text" name="city" required />
                                            </div>
                                            <div class="checkout__input">
                                                <p>State<span>*</span></p>
                                                <input type="text" name="state" required />
                                            </div>
                                            <div class="checkout__input">
                                                <p>PIN code<span>*</span></p>
                                                <input type="text" name="pincode" required />
                                            </div>
                                            <div class="">
                                                <button type="submit" class="btn btn-rounded btn-danger">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form id="formone"  method="get" >


                            <div>

                            </div>

                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="cart__discount">
                            <h6>Discount codes</h6>
                           
                                <form id="formtwo" method="get">
                                    <input type="text" name="couponCode" placeholder="Coupon code" style="color: #b7b7b7" />
                                    <button onclick="secondFunction()" class="btn btn-rounded" style="
                            font-size: 14px;
                            color: #ffffff;
                            font-weight: 700;
                            letter-spacing: 2px;
                            text-transform: uppercase;
                            background: #da1111;
                            width: auto;
                            border: none;
                          ">
                                        Apply
                                    </button>
                                </form>
                            

                        </div>
                        <div class="checkout__order">
                            <h4 class="order__title">Your order</h4>
                            <div class="checkout__order__products">
                                Product <span>Total</span>
                            </div>
                            <ul class="checkout__total__products">
                                <li>01. Vanilla salted caramel <span>$ 300.0</span></li>
                                <li>02. German chocolate <span>$ 170.0</span></li>
                                <li>03. Sweet autumn <span>$ 170.0</span></li>
                                <li>04. Cluten free mini dozen <span>$ 110.0</span></li>
                            </ul>
                            <ul class="checkout__total__all">
                                <li>Subtotal <span>$750.99</span></li>
                                <li>Total <span>$750.99</span></li>
                            </ul>

                            <ul style="
                      background-color: #dadada;
                      border-radius: 2px;
                      padding-top: 5px;
                      padding-bottom: 5px;
                    ">

                                <li class="ml-2">
                                    <input class="pixel-radio" name="paymentType" type="radio" id="cod" required />
                                    <label for="cod" class="text-dark">
                                        Cash on delivery
                                    </label>
                                </li>
                                <li class="ml-2">
                                    <input class="pixel-radio" name="paymentType" type="radio" id="online" required />
                                    <label for="online" class="text-dark">
                                        Online payment
                                    </label>
                                </li>
                            </ul>
                            <button onclick="firstFunction()" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
    <!-- Checkout Section End -->

    <script>
        function firstFunction() {
            document.getElementById("formone").submit();
        }
        function secondFunction() {
            document.getElementById("formtwo").submit();
        }
    </script>

