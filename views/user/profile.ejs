<%- include('./partials/header.ejs') %>

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                text-align: left;
            }

            .main-body {
                padding: 15px;
            }

            .card {
                box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
            }

            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid rgba(0, 0, 0, .125);
                border-radius: .25rem;
            }

            .card-body {
                flex: 1 1 auto;
                min-height: 1px;
                padding: 1rem;
            }

            .gutters-sm {
                margin-right: -8px;
                margin-left: -8px;
            }

            .gutters-sm>.col,
            .gutters-sm>[class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

            .mb-3,
            .my-3 {
                margin-bottom: 1rem !important;
            }

            .bg-gray-300 {
                background-color: #e2e8f0;
            }

            .h-100 {
                height: 100% !important;
            }

            .shadow-none {
                box-shadow: none !important;
            }

            .footer-area p {
                color: #989898;
            }
        </style>
    </head>

    <body>
        <div class="container">
            <div class="main-body">

                <nav aria-label="breadcrumb" class="main-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Profile</li>
                    </ol>
                </nav>

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                        class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4>
                                            <%= user.name %>
                                        </h4>
                                        <p class="text-secondary mb-1">
                                            <%= user.email %>
                                        </p>
                                        <p class="text-muted font-size-sm">
                                            <%= user.place %>
                                        </p>
                                        <form id="logoutForm" action="/logout" method="post">
                                            <button type="submit" form="logoutForm" class="btn btn-danger"
                                                onclick="return confirm(`Do you really want to logout?`)">Logout</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <li
                                    class="list-group-item d-flex justify-content-between align-items-center flex-wrap mb-1">
                                    <h6 class="mb-0"><i class="fa-solid fa-wallet"> Wallet</i></h6>
                                    <h5 class="text-secondary">â‚¹ <%= user.wallet %>
                                    </h5>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap mb-1"
                                    onclick="window.location.href='/profile/myOrders'">
                                    <h6 class="mb-0"><i class="fa-solid fa-box-open"></i> My orders</h6>
                                    <span class="text-secondary"><i class="fa-solid fa-chevron-right"></i></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap mb-1"
                                    onclick="window.location.href='/profile/coupons'">
                                    <h6 class="mb-0"><i class="fa-solid fa-ticket"></i> Coupons</h6>
                                    <span class="text-secondary"><i class="fa-solid fa-chevron-right"></i></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap mb-1"
                                    onclick="window.location.href='/cart'">
                                    <h6 class="mb-0"><i class="fa-solid fa-cart-shopping"></i> Cart</h6>
                                    <span class="text-secondary"><i class="fa-solid fa-chevron-right"></i></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap mb-1"
                                    onclick="window.location.href='/wishlist'">
                                    <h6 class="mb-0 "><i class="fa-regular fa-heart"></i><span
                                            class="text-dark"> Wishlist</span></h6>
                                    <span class="text-secondary"><i class="fa-solid fa-chevron-right"></i></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= user.name %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= user.email %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mobile</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= user.mobile %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Place</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <%= user.place %>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <button type="button" class="btn btn-dark" data-toggle="modal"
                                            data-target="#profileModal">Edit <i
                                                class="ml-2 fa-solid fa-pen-to-square"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal 1-->
                        <div class="modal fade" id="profileModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="profileModalLabel">Edit profile</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="container-fluid">
                                            <form id="profileForm" action="/profile/editProfile/<%= user._id %>"
                                                method="post"></form>
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label for="fullName">Full Name:</label>
                                                        <input form="profileForm" type="text" class="form-control"
                                                            name="name" value="<%= user.name %>" id="fullName" required>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label for="eMail">Email:</label>
                                                        <input form="profileForm" type="email" class="form-control"
                                                            id="eMail" name="email" value="<%= user.email %>" readonly>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label for="phone">Mobile:</label>
                                                        <input form="profileForm" type="tel" class="form-control"
                                                            id="phone" name="mobile" pattern="[0-9]{10}"
                                                            value="<%= user.mobile %>" required>
                                                        <small>Format: 8234567898(10 numbers)</small>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label for="Place">Place:</label>
                                                        <input form="profileForm" type="text" class="form-control"
                                                            name="place" value="<%= user.place %>" id="Place" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Cancel</button>
                                        <button type="submit" form="profileForm" class="btn btn-danger">Save
                                            changes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal 1-->

                        <!-- Modal 2-->
                        <div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog"
                            aria-labelledby="addAddressModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addAddressModalLabel">Add new address</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form id="addAddressForm" action="/profile/addAddress" method="post"></form>
                                        <div class="container-fluid">
                                            <div class="row ml-lg-0 ml-2">
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Name<span>*</span></p>
                                                        <input type="text" form="addAddressForm" name="name" required />
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Mobile<span>*</span></p>
                                                        <input type="text" form="addAddressForm" placeholder="+91"
                                                            name="mobile" pattern="[0-9]*" minlength="10" maxlength="10"
                                                            required />
                                                        <label for="mobile">format:8923488398</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row ml-lg-0 ml-2">
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Address<span>*</span></p>
                                                        <textarea name="address" rows="3" form="addAddressForm"
                                                            required></textarea>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Town/City<span>*</span></p>
                                                        <input type="text" form="addAddressForm" name="city" required />
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>State<span>*</span></p>
                                                        <input type="text" form="addAddressForm" name="state"
                                                            required />
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>PIN code<span>*</span></p>
                                                        <input type="number" form="addAddressForm" minlength="4"
                                                            maxlength="8" name="pinCode" required />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Cancel</button>
                                        <button type="submit" form="addAddressForm" class="btn btn-danger">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal 2 -->

                        <div class="d-flex justify-content-between mb-3">
                            <h4>Manage address </h4>
                            <button type="button" class="btn btn-secondary" data-toggle="modal"
                                data-target="#addAddressModal">Add address <i class="fa-regular fa-plus"></i></button>
                        </div>
                        <div class="row gutters-sm">
                            <% user.address.forEach(addr=> { %>
                                <div class="col-sm-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <h6>
                                                    <%= addr.name %>
                                                </h6>
                                                <div class="">
                                                    <button class="btn"
                                                        onclick="editAddress('<%= addr.id %>','<%= addr.name %>','<%= addr.mobile %>','<%= addr.address %>','<%= addr.city %>','<%= addr.state %>','<%= addr.pinCode %>')">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                    </button>
                                                    <a href="/profile/deleteAddress/<%=addr.id %>" class="btn"
                                                        onclick="return confirm(`Do you really want to remove this address ?`)">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <h6>
                                                <%=addr.mobile %>
                                            </h6>
                                            <h6>
                                                <%=addr.address %>
                                            </h6>
                                            <h6>
                                                <%=addr.city %>
                                            </h6>
                                            <h6>
                                                <%=addr.state %>
                                            </h6>
                                            <h6>PIN: <%=addr.pinCode %>
                                            </h6>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                        <!-- Modal 3-->
                        <div class="modal fade" id="editAddressModal" tabindex="-1" role="dialog"
                            aria-labelledby="editAddressModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editAddressModalLabel">Edit address</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div id="editFormDiv">
                                            <form id="editAddressForm" action="/profile/editAddress/" method="post">
                                            </form>
                                        </div>
                                        <div id="editAddrressContainer" class="container-fluid">
                                            <div class="row ml-lg-0 ml-2">
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Name<span>*</span></p>
                                                        <input type="text" form="editAddressForm" name="name"
                                                            required />
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Mobile<span>*</span></p>
                                                        <input type="text" form="editAddressForm" placeholder="+91"
                                                            name="mobile" pattern="[0-9]*" minlength="10" maxlength="10"
                                                            required />
                                                        <label for="mobile">format:8923488398</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row ml-lg-0 ml-2">
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Address<span>*</span></p>
                                                        <textarea name="address" rows="3" form="editAddressForm"
                                                            required></textarea>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Town/City<span>*</span></p>
                                                        <input type="text" form="editAddressForm" name="city"
                                                            required />
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>State<span>*</span></p>
                                                        <input type="text" form="editAddressForm" name="state"
                                                            required />
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>PIN code<span>*</span></p>
                                                        <input type="number" form="editAddressForm" minlength="4"
                                                            maxlength="8" name="pinCode" required />
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Cancel</button>
                                        <button type="submit" form="editAddressForm"
                                            class="btn btn-danger">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal 3 -->

                    </div>
                </div>
            </div>
        </div>
        <script>
            function editAddress(id, name, mobile,address, city, state, pincode) {
                let formDiv = document.getElementById('editFormDiv')
                let container = document.getElementById('editAddrressContainer')
                formDiv.innerHTML = `<form id="editAddressForm" action='/profile/editAddress/${id}' method="post"></form>`
                container.innerHTML = `<div class="row ml-lg-0 ml-2">
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Name<span>*</span></p>
                                                        <input type="text" form="editAddressForm" value='${name}' name="name"
                                                            required />
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Mobile<span>*</span></p>
                                                        <input type="text" form="editAddressForm" value='${mobile}' placeholder="+91"
                                                            name="mobile" pattern="[0-9]*" minlength="10" maxlength="10"
                                                            required />
                                                        <label for="mobile">format:8923488398</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row ml-lg-0 ml-2">
                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Address<span>*</span></p>
                                                        <textarea name="address" rows="3" form="editAddressForm"
                                                            required>${address}</textarea>
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>Town/City<span>*</span></p>
                                                        <input type="text" value='${city}' form="editAddressForm" name="city"
                                                            required />
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>State<span>*</span></p>
                                                        <input type="text" value='${state}' form="editAddressForm" name="state"
                                                            required />
                                                    </div>
                                                </div>

                                                <div class="col-lg-6">
                                                    <div>
                                                        <p>PIN code<span>*</span></p>
                                                        <input type="number" value='${pincode}' form="editAddressForm" minlength="4"
                                                            maxlength="8" name="pinCode" required />
                                                    </div>
                                                </div>

                                            </div>`
                $("#editAddressModal").modal("show");
            }
        </script>

        <%- include('./partials/footer.ejs') %>