<%- include('./partials/header.ejs') %>

<style>
  @media (max-width: 991px) {
    #signupTop {
      display: none !important;
    }
    #signupBottom {
      display: block !important;
    }
    .login_form_inner {
      padding-top: 30px;
    }
  }
  .section_gap {
    padding: 0px;
    margin-bottom: 40px;
  }
  input.is-invalid {
    border-color: red;
    background-color: #ffe6e6;
  }
</style>

<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
  <div class="container">
    <div class="row">
      <div id="signupTop" class="col-lg-6">
        <div class="login_box_img">
          <img class="img-fluid" src="img/login.jpg" alt="" />
          <div class="hover">
            <h4>New to Book<span class="text-danger">Nook</span>?</h4>
            <p></p>
            <a class="primary-btn" href="/signup">Create an Account</a>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="login_form_inner">
          <h3>Log in to enter</h3>
          <form
            class="row login_form"
            action="/login"
            method="post"
            id="loginForm"
          >
            <div class="col-md-12 form-group">
              <input
                type="email"
                class="form-control"
                id="name"
                name="email"
                placeholder="Email"
                onfocus="this.placeholder = ''"
                onblur="this.placeholder = 'Email'"
                required
              />
            </div>
            <div class="col-md-12 form-group">
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Password"
                onfocus="this.placeholder = ''"
                onblur="this.placeholder = 'Password'"
                required
              />
              <label id="passwordError" class="text-danger"></label>
              <label for="Invalid" class="text-danger"> <%= error %> </label>
            </div>
            <div class="col-md-12 form-group">
              <div class="creat_account">
                <input type="checkbox" id="f-option2" name="selector" />
                <label for="f-option2">Keep me logged in</label>
              </div>
            </div>
            <div class="col-md-12 form-group">
              <button type="submit" value="submit" class="primary-btn">
                Log In
              </button>
              <a href="/emailInput">Forgot Password?</a>
            </div>
          </form>
        </div>
      </div>
      <div id="signupBottom" class="col-lg-6" style="display: none">
        <div class="login_box_img">
          <img class="img-fluid" src="img/login.jpg" alt="" />
          <div class="hover">
            <h4>New to Book<span class="text-danger">Nook</span>?</h4>
            <p></p>
            <a class="primary-btn" href="/signup">Create an Account</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================End Login Box Area =================-->

<script>
  // Get the form element
  const form = document.getElementById('loginForm');

  // Add an event listener for form submission
  form.addEventListener('submit', function (event) {
    // Prevent the form from submitting
    event.preventDefault();

    // Get the input fields
    const password = document.getElementById('password');

    // Get the error message elements
    const passwordError = document.getElementById('passwordError');

    // Validate the input fields
    let isValid = true;

    if (password.value.trim().length < 6) {
      password.classList.add('is-invalid');
      passwordError.textContent =
        'Password will be at least 6 characters and will not contain spaces';
      isValid = false;
    } else {
      password.classList.remove('is-invalid');
      passwordError.textContent = '';
    }

    // If the form is valid, submit it
    if (isValid) {
      form.submit();
    }
  });
</script>

