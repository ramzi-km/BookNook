<%- include('./partials/header.ejs') %>

    <!--================Single Product Area =================-->
    <div class="product_image_area" style="margin-top: -100px;">
        <div class="container">
            <div class="row s_product_inner">

                <div class="col-lg-6">
                    <div class="d-flex flex-column align-items-center product-main">
                        <!-- Primary carousel image -->
                        <div class="shows"  style="height: 540px; width:350px">
                            <img src="/images/productImages/<%= product.mainImage[0].filename %>" id="show-img"
                                style="max-height:80%;" alt="">
                        </div>

                        <!-- Secondary carousel image thumbnail gallery -->

                        <div class="small-img d-flex align-items-center">
                            <img src="/imageZoom/images/next-icon.png" class="icon-left" alt="" id="prev-img">
                            <div class="small-container">
                                <div id="small-img-roll">
                                    <img src="/images/productImages/<%= product.mainImage[0].filename %>"
                                        class="show-small-img" alt="">
                                    <% product.extraImages.forEach(image=> { %>
                                        <img src="/images/productImages/<%= image.filename %>" class="show-small-img"
                                            alt="">
                                        <% }) %>

                                </div>
                            </div>
                            <img src="/imageZoom/images/next-icon.png" class="icon-right" alt="" id="next-img">
                        </div>
                    </div>
                    <div class="s_Product_carousel imageSliderMobile">
                        <div class="single-prd-item" style="height: 400px; width: 300px; margin-left: 20%;">
                            <img class="img-fluid "
                                src="/images/productImages/<%= product.mainImage[0].filename %>" alt=""
                                style="height: 100%; width: 100%;">
                        </div>
                        <% product.extraImages.forEach(image=> { %>
                            <div class="single-prd-item" style="height: 400px; width: 300px; margin-left: 20%;" >
                                <img class="img-fluid" src="/images/productImages/<%= image.filename %>" alt=""
                                    style="height: 100%; width: 100%;" >
                            </div>
                            <% }) %>

                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="s_product_text">
                        <h3>
                            <%= product.name %>
                        </h3>
                        <h2>â‚¹<%= product.price %>
                        </h2>
                        <ul class="list">
                            <li><a href="#"><span>Category</span> : <%= product.category %></a></li>
                            <% if (product.inStock> 0) { %>
                                <li><a href="#"><span>Availibility</span> : <span class="text-success">In
                                            Stock</span></a></li>
                                <% }else{ %>
                                    <li><a href="#"><span>Availibility</span> : <span class="text-danger">Out of
                                                Stock</span></a></li>
                                    <% } %>
                        </ul>
                        <p>
                            <%= product.description %>
                        </p>

                        <div class="card_area d-flex align-items-center">
                            <a class="primary-btn" href="#">Add to Cart</a>
                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================End Single Product Area =================-->

