<%- include('./partials/header') %>

    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="shop__sidebar__search">
                    <form id="productsearchform" action="/shop" method="get">
                        <input id="productsearchinput" type="text" name="search" placeholder="Search...">
                        <button id="procuctsearchbutton" class="btn btn-danger" type="submit"><span><i
                                    class="fa-solid fa-magnifying-glass"></i></span></button>
                    </form>
                </div>

                <div class="sidebar-categories">
                    <div class="head">Browse Categories</div>
                    <ul class="main-categories">
                        <% categories.forEach(category=> { %>
                            <li class="main-nav-list"><a href="?category=<%= category.name %>"><span
                                        class="lnr lnr-arrow-right"></span>
                                    <%= category.name %>
                                </a>
                            </li>
                            <% }) %>

                    </ul>
                </div>
                <div class="sidebar-filter mt-50">
                    <div class="top-filter-head">Product Filters</div>
                    <div class="common-filter">
                        <div class="head">Authors</div>
                        <form action="#">
                            <ul>
                                <% authors.forEach(author => { %>
                                    <li class="filter-list"><input class="pixel-radio" type="radio" id="apple"
                                        name="brand"><label for="apple"><%= author._id %></label></li>
                                <% }) %>
                            </ul>
                        </form>
                    </div>
                    <div class="common-filter">
                        <div class="head">Price</div>
                        <form action="#">
                            <ul>
                                <li class="filter-list"><input class="pixel-radio" type="radio" id="balckleather"
                                        name="color"><label for="balckleather">₹100 - ₹500</label></li>
                                <li class="filter-list"><input class="pixel-radio" type="radio" id="blackred"
                                        name="color"><label for="blackred">₹500 - ₹1000</label></li>
                                <li class="filter-list"><input class="pixel-radio" type="radio" id="gold"
                                        name="color"><label for="gold">₹1000 - ₹2000</label></li>
                                <li class="filter-list"><input class="pixel-radio" type="radio" id="spacegrey"
                                        name="color"><label for="spacegrey">above ₹2000</label></li>
                            </ul>
                        </form>
                    </div>

                </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">
                <!-- Start Filter Bar -->
                <div class="filter-bar d-flex flex-wrap align-items-center">
                    <div class="sorting">
                        <select>
                            <option selected value="">Sort by</option>
                            <option value="1">Price:Low to high</option>
                            <option value="1">Price:High to low</option>
                        </select>
                    </div>
                    <div class="pagination ml-auto">
                        <a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
                        <a href="#">6</a>
                        <a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- End Filter Bar -->
                <!-- Start Best Seller -->
                <section class="lattest-product-area pb-40 category-list">
                    <div class="row">
                        <!-- single product -->
                        <% products.forEach(product=> { %>
                            <div class="col-lg-4 col-6 col-md-4">
                                <div class="single-product">
                                    <a href="/productDetails/<%= product._id %>"><img class="img-fluid"
                                            src="/images/productImages/<%= product.mainImage[0].filename %>" alt="" style="max-width: 234px;  max-height: 274px;"></a>
                                    <div class="product-details">
                                        <h6 style="max-height: 20px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;" >
                                            <a href="/productDetails/<%= product._id %>" class="text-dark"><span><%= product.name %></span></a>
                                        </h6>
                                        <div class="price">
                                            <h6 class="text-danger">₹ <%= product.price %>
                                            </h6>
                                            <h6 class="l-through">₹ <%= product.mrp %>
                                            </h6>
                                        </div>
                                        <div class="prd-bottom">

                                            <a href="" class="social-info">
                                                <span class="ti-bag"></span>
                                                <p class="hover-text">add to cart</p>
                                            </a>
                                            <a href="" class="social-info">
                                                <span class="lnr lnr-heart"></span>
                                                <p class="hover-text">Wishlist</p>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>

                                <!-- single product -->

                                <!-- single product -->

                    </div>
                </section>
                <!-- End Best Seller -->
                <!-- Start Filter Bar -->
                <div class="filter-bar d-flex flex-wrap align-items-center mb-5">
                    <div class="pagination ml-auto">
                        <a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
                        <a href="#">6</a>
                        <a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>
                <!-- End Filter Bar -->
            </div>
        </div>
    </div>

    <!-- Start related-product Area -->

    <!-- End related-product Area -->

    <%- include('./partials/footer') %>